<% content_for :page_title do %>
  <%= @vendor.name %>
<% end %>

<%= form_for [:admin, @vendor], url: admin_vendor_settings_url do |f| %>
  <fieldset>
    <%= render partial: 'spree/shared/error_messages', locals: { target: @vendor } %>
    <div class="form-group">
      <%= f.field_container :logo do %>
        <%= f.label :logo %>
        <%= f.file_field :logo %>
        <%= image_tag main_app.url_for(@vendor.logo.variant(resize_to_limit: [200, 200])) if @vendor.logo.present? %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.field_container :image do %>
        <%= f.label :image %>
        <%= f.file_field :image %>
        <%= image_tag main_app.url_for(@vendor.image.url(:medium)) if @vendor.image %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.field_container :about_us do %>
        <%= f.label :about_us %>
        <%= f.text_area :about_us, class: 'form-control' %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.field_container :contact_us do %>
        <%= f.label :contact_us, 'Phone' %>
        <%= f.text_area :contact_us, class: 'form-control' %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.field_container :city do %>
      <%= f.label :city %>
      <%= f.select :city,
        options_for_select(%w(Kathmandu Pokhara Chitwan Biratnagar Butwal Bhairahwa Damak Itahari), selected: @vendor.city), {}, class: 'select2', required: :required %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.field_container :street do %>
        <%= f.label :street %>
        <%= f.text_field :street, class: 'form-control' %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.field_container :facebook do %>
        <%= f.label :facebook %>
        <%= f.text_field :facebook, class: 'form-control' %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.field_container :instagram do %>
        <%= f.label :instagram %>
        <%= f.text_field :instagram, class: 'form-control' %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.field_container :about_us do %>
        <%= f.label :about_us %>
        <%= f.text_area :about_us, class: 'form-control' %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.field_container :notification_email do %>
        <%= f.label :notification_email %>
        <%= f.email_field :notification_email, class: 'form-control' %>
      <% end %>
    </div>
    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t('actions.update'), 'save' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), admin_vendor_settings_url, icon: 'delete' %>
    </div>
  </fieldset>
<% end %>
